<h1>Register an Organization</h1>
<hr />

<div class="register">
  <p>
  Please fill up the form below to register your organization. Once your organization account is activated, you may start creating Events and looking for volunteers.<br /><br />
  </p>

  <%= form_for @organization do |f| %>
    <%= f.label :name, "Organization Name" %>
    <%= f.text_field :name, :size => 50 %>
    <div class="clear"></div>

    <%= f.label :address, "Address" %>
    <%= f.text_field :address, :size => 50 %>
    <div class="clear"></div>

    <%= f.label :contact_person, "Contact Person" %>
    <%= f.text_field :contact_person, :size => 50 %>
    <div class="clear"></div>

    <%= f.label :phone_number, "Contact Number" %>
    <%= f.text_field :phone_number, :size => 50 %>
    <div class="clear"></div>

    <%= f.label :email %>
    <%= f.text_field :email, :size => 50 %>
    <div class="clear"></div>

    <%= f.label :website %>
    <%= f.text_field :website, :size => 50 %>
    <div class="clear"></div>

    <%= f.label :organization_type_id, "Organization Type" %>
    <%= f.select :organization_type_id, OrganizationType.all.map{|o| [o.name, o.id]}, {:include_blank => true}, {:style => "width:250px"} %>
    <div class="clear"></div>

    <%= f.label :country %>
    <%= f.select :country, Carmen.countries.collect {|c| [c[0], c[0]] }, {:include_blank => true}, {:style => "width:250px"} %>
    <div class="clear"></div>

    <%= f.label :mission_statement, "Mission Statement" %>
    <%= f.text_area :description, :rows => 5, :cols => 38 %><br /><br />
    <div class="clear"></div>

    <%= f.label :description %>
    <%= f.text_area :description, :rows => 15, :cols => 38 %><br /></br />
    <div class="clear"></div>

    <div class="forceCenter"><input type="image" src="/assets/btn-submit.gif" alt="Submit" /></div>
    <div class="clear"></div>

  <% end %>
</div><!--register-->
