%h1 Organization Dashboard
%hr/
.user-dashboard
  %h2= @organization.name
  .dashboard-left
    = image_tag "dash-menu-top.gif"
    %h4 Organization
    %ul.sidebar-links
      %li
        = link_to "My Profile", organization_url(@organization)
      %li
        = link_to "Edit Profile", edit_organization_url(@organization)
      %li
        = link_to "Create event", new_organization_event_url(@organization)
    = image_tag "dash-menu-btm.gif"

  .dashboard-right
    %h2 Events
    %hr/
    %h3 Upcoming Events
    %ul.feed-list
      - @upcoming_events.each do |event|
        %li
          %span.feed-date= event.start_date
          = image_tag event.image.url(:small), :class => "feed-image", :style => "width:90px;height:90px"
          %span.feed-desc
            %h4= event.title
            %label> Time:&nbsp;
            = time_text(event)
            %br
            %label> Venue:&nbsp;
            = event.address
            %br
            %span.readmore>= link_to "Read More", organization_event_url(event.organization, event)
            &nbsp;&nbsp;
            = link_to "Edit Details", edit_organization_event_url(event.organization, event)
          .clear
    %h3 Ongoing Events
    %ul.feed-list
      - @ongoing_events.each do |event|
        %li
          %span.feed-date= event.start_date
          = image_tag event.image.url(:small), :class => "feed-image", :style => "width:90px;height:90px"
          %span.feed-desc
            %h4= event.title
            %label> Time:&nbsp;
            = time_text(event)
            %br
            %label> Venue:&nbsp;
            = event.address
            %br
            %span.readmore>= link_to "Read More", organization_event_url(event.organization, event)
            &nbsp;&nbsp;
            = link_to "Edit Details", edit_organization_event_url(event.organization, event)
          .clear
    %h3 Finished Events
    %ul.feed-list
      - @finished_events.each do |event|
        %li
          %span.feed-date= event.start_date
          = image_tag event.image.url(:small), :class => "feed-image", :style => "width:90px;height:90px"
          %span.feed-desc
            %h4= event.title
            %label> Time:&nbsp;
            = time_text(event)
            %br
            %label> Venue:&nbsp;
            = event.address
            %br
            %span.readmore>= link_to "Read More", organization_event_url(event.organization, event)
            &nbsp;&nbsp;
            = link_to "Edit Details", edit_organization_event_url(event.organization, event)
          .clear

  .clear
