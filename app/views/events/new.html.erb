<%= form_for [@organization, @event] do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Create new event</legend>
  <div class="clearfix">
  <%= f.label "Title" %>
  <div class="input">
    <%= f.text_field :title, :class => "xlarge" %>
  </div>
  </div> <!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "Description" %>
  <div class="input">
    <%= f.text_area :description, :rows => 5, :class => "xxlarge" %>
  </div>
  </div> <!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "Address" %>
  <div class="input">
    <%= f.text_area :address, :rows => 5, :class => "xxlarge" %>
  </div>
  </div> <!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "Map" %>
  <div class="input">
    <%= f.text_field :map, :class => "xlarge" %>
  </div>
  </div> <!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "Start date" %>
  <div class="input">
    <div class="inline-inputs">
      <%= f.text_field :start_date, :class => "small" %>
      <%= f.text_field :start_time, :class => "mini" %>
    </div>
  </div>
  </div><!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "End date" %>
  <div class="input">
    <div class="inline-inputs">
      <%= f.text_field :end_date, :class => "small" %>
      <%= f.text_field :end_time, :class => "mini" %>
    </div>
  </div>
  </div><!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "Categories" %>
  <div class="input">
    <%= f.collection_select :category_ids, Category.all, :id, :name, {}, {:multiple => true, :class => "xlarge", :size => 5} %>
  </div>
  </div> <!-- /clearfix -->
  <div class="clearfix">
  <%= f.label "Event Types" %>
  <div class="input">
    <%= f.collection_select :event_type_ids, EventType.all, :id, :name, {}, {:multiple => true, :class => "xlarge", :size => 5} %>
  </div>
  </div> <!-- /clearfix -->

  <div class="actions">
    <button type="submit" class="btn primary">Create event</button>&nbsp;<%= link_to "Cancel", admin_organization_url(@organization), :class => "btn" %>
  </div>

  <%# f.submit %>
  </fieldset>
<% end %>

